{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "Haddock Pseudo Contact Shifts (PCS) restraints definitions",
  "type": "object",
  "required": ["project_id"],
  "properties": {
    "project_id": {
      "description": "Haddock project identifier",
      "type": "string"
    },
    "tensorfile": {
      "default": "",
      "description": "Tensor distance restraints file for all PCS restraints",
      "haddock_type": "CNSRestraintFile",
      "type": "string"
    },
    "pcs": {
      "description": "Pseudo Contact Shifts restraints",
      "haddock_type": "PCSParameters",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "choice": {
          "default": "XPCS",
          "description": "PCS type",
          "type": "string",
          "enum": ["XPCS"]
        },
        "d": {
          "default": 10000.0,
          "description": "D",
          "type": "number"
        },
        "r": {
          "default": 1000.0,
          "description": "R",
          "type": "number"
        },
        "pcsdata": {
          "description": "HADDOCK TBL file containing PCS restraints",
          "haddock_type": "CNSRestraintFile",
          "type": "string"
        },
        "constants": {
          "description": "PCS energy constants",
          "haddock_type": "ExtStageConstants",
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "firstit": {
              "default": 0,
              "description": "First iteration",
              "type": "integer",
              "enum": [0,1,2]
            },
            "lastit": {
              "default": 2,
              "description": "Last iteration",
              "type": "integer",
              "enum": [0,1,2]
            },
            "stages": {
              "description": "Energy constants per stage",
              "haddock_type": "StageConstants",
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "cool1": {
                  "default": 100.0,
                  "description": "Cool 1",
                  "type": "number",
                  "minimum": 0
                },
                "cool2": {
                  "default": 100.0,
                  "description": "Cool 2",
                  "type": "number",
                  "minimum": 0
                },
                "cool3": {
                  "default": 1000.0,
                  "description": "Cool 3",
                  "type": "number",
                  "minimum": 0
                },
                "hot": {
                  "default": 100.0,
                  "description": "Hot",
                  "type": "number",
                  "minimum": 0
                }
              }
            }
          }
        }
      }
    }
  }
}